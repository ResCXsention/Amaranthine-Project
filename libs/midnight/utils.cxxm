#include <numbers>
#include <cstddef>

export module midnight:utils;

export namespace midnight
{
	template<std::size_t R, std::size_t C>
	struct Matrix;
	
	double radians(const double degrees);
	double degrees(const double radians);
}

double midnight::radians(const double degrees)
{
	return degrees * (std::numbers::pi / 180.0f);
}

double midnight::degrees(const double radians)
{
	return radians * (std::numbers::inv_pi * 180.0f);
}
